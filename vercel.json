{
  "installCommand": "echo 'Skipping install - static site only'",
  "buildCommand": "echo 'No build required - static site'",
  "outputDirectory": "deploy-site",
  "cleanUrls": false,
  "trailingSlash": false,
  "redirects": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/shop",
      "destination": "/shop/index.html"
    },
    {
      "source": "/cart",
      "destination": "/cart/index.html"
    },
    {
      "source": "/product/:sku",
      "destination": "/product/index.html?sku=:sku"
    }
  ],
  "headers": [
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ]
}
