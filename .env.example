# ============================================
# Success Chemistry - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual credentials
# ⚠️  Never commit .env to version control
# ============================================

# ============================================
# Telegram Bot Credentials
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# WooCommerce API Credentials
# ============================================
WOOCOMMERCE_URL=https://yoursite.com
WOOCOMMERCE_CONSUMER_KEY=your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_consumer_secret

# ============================================
# PayPal API Credentials
# ============================================
# Mode: 'sandbox' for testing, 'live' for production
PAYPAL_MODE=sandbox
PAYPAL_SANDBOX_CLIENT_ID=your_sandbox_client_id_here
PAYPAL_PRODUCTION_CLIENT_ID=your_production_client_id_here
PAYPAL_SANDBOX_CLIENT_SECRET=your_sandbox_secret_here
PAYPAL_PRODUCTION_CLIENT_SECRET=your_production_secret_here

# ============================================
# eBay API Credentials
# ============================================
# Get from: https://developer.ebay.com/my/keys
EBAY_CLIENT_ID=your_ebay_client_id_here
EBAY_CLIENT_SECRET=your_ebay_client_secret_here
EBAY_DEV_ID=your_ebay_dev_id_here
EBAY_RU_NAME=your_ebay_ru_name_here
# Access tokens are generated via OAuth flow
# EBAY_ACCESS_TOKEN=your_access_token_here
# EBAY_REFRESH_TOKEN=your_refresh_token_here
# EBAY_TOKEN_EXPIRES=token_expiration_date

# ============================================
# Google Analytics
# ============================================
GOOGLE_ANALYTICS_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# Google Ads (Enhanced Conversions)
# ============================================
GOOGLE_ADS_CONVERSION_ID=AW-XXXXXXXXX
GOOGLE_ADS_CONVERSION_LABEL=XXXXX

# ============================================
# Stripe API Key
# ============================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here

# ============================================
# Walmart API Credentials
# ============================================
WALMART_CLIENT_ID=your_client_id_here
WALMART_CLIENT_SECRET=your_client_secret_here

# ============================================
# Hostinger FTP/SFTP Deployment Credentials
# ============================================
HOSTINGER_HOST=ftp.yourdomain.com
HOSTINGER_USER=your_ftp_username
HOSTINGER_PASS=your_ftp_password
HOSTINGER_REMOTE_PATH=/public_html
# Optional: For SSH/rsync deployment
# HOSTINGER_SSH_KEY=/path/to/your/ssh/key

# ============================================
# Google Service Account (for Google Ads API)
# ============================================
# Option A: Store JSON content in .env (recommended)
# GOOGLE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"your-project",...}'
# Option B: Store JSON file path
# GOOGLE_SERVICE_ACCOUNT_PATH=./google-service-account.json

# ============================================
# Render API (for Direct Deployment)
# ============================================
# Get from: https://dashboard.render.com/account/api-keys
# Optional: Only needed if you want to trigger deployments via API
# Render auto-deploys from GitHub by default
# RENDER_API_KEY=your_render_api_key_here

# ============================================
# Instagram Graph API Credentials
# ============================================
# Get from: https://developers.facebook.com/
# See INSTAGRAM_API_SETUP.md for complete setup instructions
# Requires: Instagram Business/Creator account connected to Facebook Page
INSTAGRAM_ACCESS_TOKEN=your_long_lived_access_token_here
INSTAGRAM_ACCOUNT_ID=your_instagram_business_account_id
FACEBOOK_PAGE_ID=your_facebook_page_id
# Optional: For custom scheduling
# INSTAGRAM_SCHEDULING_ENABLED=true

# ============================================
# Amazon SP-API Credentials
# ============================================
# Get from: https://developer.amazon.com/selling-partner-api/console
# See AMAZON_SP_API_SETUP.md for complete setup instructions
# AMAZON_LWA_CLIENT_ID=your_lwa_client_id_here
# AMAZON_LWA_CLIENT_SECRET=your_lwa_client_secret_here
# AMAZON_REFRESH_TOKEN=your_refresh_token_here
# AMAZON_IAM_USER_ARN=arn:aws:iam::YOUR_ACCOUNT:user/sp-api-user
# AMAZON_IAM_ROLE_ARN=arn:aws:iam::YOUR_ACCOUNT:role/sp-api-role
# AMAZON_MARKETPLACE_ID=ATVPDKIKX0DER
# AMAZON_SELLER_ID=your_seller_id_here
# AMAZON_REGION=us-east-1
# AMAZON_REDIRECT_URI=https://successchemistry.com/amazon-oauth
