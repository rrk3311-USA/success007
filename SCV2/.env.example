# Medusa backend – update when you deploy the backend (e.g. Render)
MEDUSA_BACKEND_URL=http://localhost:9000
NEXT_PUBLIC_MEDUSA_BACKEND_URL=http://localhost:9000

# Publishable API key from Medusa Admin (Sales Channels)
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_test

# Storefront URL (Vercel or local)
NEXT_PUBLIC_BASE_URL=http://localhost:8000

# Default region (ISO-2 lowercase)
NEXT_PUBLIC_DEFAULT_REGION=us

# Optional: Medusa Admin URL (default derived from backend URL with port 7001)
# NEXT_PUBLIC_MEDUSA_ADMIN_URL=http://localhost:7001

# PayPal – same as success project (deploy-site/config.js / secrets-personal)
# Client ID is public (frontend); use production or sandbox from Success Chemistry
NEXT_PUBLIC_PAYPAL_CLIENT_ID=
# Optional: set to true to force sandbox (default: use production client ID above)
# NEXT_PUBLIC_PAYPAL_SANDBOX=false
